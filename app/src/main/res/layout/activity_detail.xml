<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codepath.apps.restclienttemplate.Activity.detailActivity">

    <ImageView
        android:id="@+id/ivDetialImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvDetialTimeStamp"
        android:text="3 mins ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvDetialBody"
        android:text="New Text"
        android:autoLink="all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDetialImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvDetialName"
        android:text="Quietus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivDetialImg"
        android:layout_toEndOf="@+id/ivDetialImg"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/tvDetialBody"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btnReply"
            android:background="@drawable/ic_reply1"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btnRetweet"
            android:background="@drawable/ic_retweet"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tvRetweetCount"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btnLike"
            android:background="@drawable/ic_like"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tvFavorateCount"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>
